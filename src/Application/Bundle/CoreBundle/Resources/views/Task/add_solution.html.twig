{% extends 'ApplicationCoreBundle:Task:index.html.twig' %}
{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@ApplicationCoreBundle/Resources/public/js/solution.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block content %}
    ‚Üê <a href="{{ path('tasks_list') }}">all tasks</a>

    <h1>{{ task.fullTitle }}</h1>
    <div id="task-description" class="collapse out">{{ task.description|raw }}</div>
    <button id="descr-btn" type="button" class="btn btn-info" data-toggle="collapse" data-target="#task-description" aria-expanded="true" aria-controls="task-description">
      Show description
    </button>

    <br/><br/>

    <div class="form-container">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_row(form.code, { 'attr': {'class': 'form-control', 'rows' : 10} }) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn-success btn">Send</button>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
